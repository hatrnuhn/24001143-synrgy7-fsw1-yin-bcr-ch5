generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Car {
  id                String       @id @db.Uuid
  plate             String
  manufacture       String
  model             String
  rate              Decimal      @db.Decimal
  description       String
  transmission      String
  type              String
  year              Int
  options           String[]
  specs             String[]
  availableDate     DateTime     @map("available_date") @db.Date
  creationTimestamp DateTime     @map("creation_timestamp") @db.Timestamptz(6)
  deletionTimestamp DateTime?    @map("deletion_timestamp") @db.Timestamptz(6)
  carImages        CarImage[]
  rentals           Rental[]

  @@map("Cars")
}

model Payment {
  id                Int       @id @default(autoincrement())
  timestamp         DateTime  @db.Timestamptz(6)
  amountTotal       Decimal   @map("amount_total") @db.Decimal
  creationTimestamp DateTime  @map("creation_timestamp") @db.Timestamptz(6)
  deletionTimestamp DateTime? @map("deletion_timestamp") @db.Timestamptz(6)
  rentals           Rental[]

  @@map("Payments")
}

model Rental {
  id        Int      @id @default(autoincrement())
  carId     String   @map("car_id") @db.Uuid
  userId    Int      @default(autoincrement()) @map("user_id")
  paymentId Int      @default(autoincrement()) @map("payment_id")
  startDate DateTime @map("start_date") @db.Timestamptz(6)
  endDate   DateTime @map("end_date") @db.Timestamptz(6)
  amount    Decimal  @db.Decimal
  cars      Car      @relation(fields: [carId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  payments  Payment  @relation(fields: [paymentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  users     User     @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@map("Rentals")
}

model User {
  id                Int       @id @default(autoincrement())
  name              String
  address           String
  phoneNumber       String    @map("phone_number")
  creationTimestamp DateTime  @map("creation_timestamp") @db.Timestamptz(6)
  deletionTimestamp DateTime? @map("deletion_timestamp") @db.Timestamptz(6)
  rentals           Rental[]

  @@map("Users")
}

model CarImage {
  id            Int       @id @default(autoincrement())
  carId        String    @db.Uuid @map("car_id")
  filePath     String    @map("file_path")
  creationDate DateTime? @default(now()) @db.Timestamptz(6) @map("creation_date")
  cars          Car       @relation(fields: [carId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@map("Car_images")
}
